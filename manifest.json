{
    "update_url": "https://clients2.google.com/service/update2/crx",
    "name": "Fanfiction Ultimate",
    "version": "1.0",
    "manifest_version": 1,
    "description": "Consolidates Fan Fiction stories for easier reading and saving.",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "default_locale": "en",
    "page_action": {
        "default_icon": "icon.png",
        "default_title": "Export Story"
    },
    "permissions": [
        "unlimitedStorage",
        "tabs",
        "*://www.fanfiction.net/*"
    ]
}