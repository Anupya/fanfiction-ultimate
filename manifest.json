{
    "update_url": "https://clients2.google.com/service/update2/crx",
    "name": "FanfictionUltimate",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "The ultimate FanFiction.net Chrome Extension to meet your fangirl needs.",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [{
      "js": ["CS_buttons.js"],
      "matches": ["*://www.fanfiction.net/s/*"],
      "run_at": "document_start"
    }],
    "default_locale": "en",
    "page_action": {
        "default_icon": "icon.png",
        "default_title": "FanFictionUltimate"
    },
    "permissions": [
        "unlimitedStorage",
        "tabs",
        "*://www.fanfiction.net/*"
    ]
}